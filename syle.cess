body{font-family:sans-serif;display:flex;flex-direction:column;align-items:center;padding:10px}
#board{width:300px;height:300px;border:2px solid #333;position:relative;margin:10px;background:linear-gradient(45deg,#f8f0e3,#e8f0f8)}
.token{width:30px;height:30px;border-radius:50%;background:#ffcc00;position:absolute;display:flex;align-items:center;justify-content:center;font-weight:bold}
#controls{display:flex;gap:10px;align-items:center}
#dice{font-size:24px;padding:6px 10px;border:1px solid #999;border-radius:6px}
